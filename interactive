    // MARK: - Ð›Ð¾Ð³Ð¸ÐºÐ°
    
    private func handleStart() {
        startTime = Date()
        currentScreen = .mood
    }
    
    private func handleMoodSelect(_ mood: String) {
        selection.mood = mood
        currentScreen = .difficulty
    }
    
    private func handleDifficultySelect(_ difficulty: String) {
        selection.difficulty = difficulty
        currentScreen = .format
    }
    
    private func handleFormatSelect(_ format: String) {
        selection.format = format
        currentScreen = .destination
    }
    
    private func handleDestinationSelect(_ destination: String) {
        selection.destination = destination
        currentScreen = .result
    }
    
    private func handleComplete() {
        if let start = startTime {
            elapsedTime = Int(Date().timeIntervalSince(start))
        } else {
            elapsedTime = 0
        }
        currentScreen = .completion
    }
    
    private func handleRestart() {
        currentScreen = .start
    }
    
    private func getSecondsWord(_ num: Int) -> String {
        let lastDigit = num % 10
        let lastTwo = num % 100
        
        if lastTwo >= 11 && lastTwo <= 14 { return "ÑÐµÐºÑƒÐ½Ð´" }
        if lastDigit == 1 { return "ÑÐµÐºÑƒÐ½Ð´Ñƒ" }
        if (2...4).contains(lastDigit) { return "ÑÐµÐºÑƒÐ½Ð´Ñ‹" }
        return "ÑÐµÐºÑƒÐ½Ð´"
    }
}
