    private var screenCompletion: some View {
        VStack(spacing: 40) {
            Spacer()
            VStack(spacing: 16) {
                Text("Ð’Ñ‹ ÑÐ¿Ñ€Ð°Ð²Ð¸Ð»Ð¸ÑÑŒ Ð·Ð° \(elapsedTime) \(getSecondsWord(elapsedTime))")
