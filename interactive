                .padding(.vertical, 22)
                .background(isPrimary ? Color("Primary", bundle: nil) : Color.white)
                .foregroundColor(isPrimary ? .white : .primary)
                .overlay(
                    Group {
                        if !isPrimary {
                            RoundedRectangle(cornerRadius: 20)
