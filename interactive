enum Screen {
    case start
    case mood
    case difficulty
    case format
    case destination
    case result
    case completion
}

struct Destination: Identifiable {
    let id: String
    let name: String
    let imageUrl: String
}

struct Selection {
    var mood: String = ""
    var difficulty: String = ""
    var format: String = ""
    var destination: String = ""
}

