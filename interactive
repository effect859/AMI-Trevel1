            }
            .frame(maxWidth: .infinity)
            .padding(.vertical, 28)
            .background(Color.white)
            .overlay(
                RoundedRectangle(cornerRadius: 20)
                    .stroke(Color.black.opacity(0.1), lineWidth: 2)
